<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".CurrentEventActivity">

    <EditText
        android:id="@+id/eventName"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/currDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Date"
            android:inputType="date"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/currTime"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Time"
            android:inputType="time"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="58dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:layout_weight="5"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text=" Items list"
            android:textColor="@color/green"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="5"
            android:gravity="center"
            android:text=" Items taken"
            android:textColor="@color/green"
            android:textSize="15sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/itemsList"
            android:layout_width="184dp"
            android:layout_height="260dp">

        </ListView>

        <ListView
            android:id="@+id/takenItemsList"
            android:layout_width="176dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:id="@+id/dupEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_syle"
        android:text="duplicate this event"
        android:textColor="@color/white" />


</LinearLayout>